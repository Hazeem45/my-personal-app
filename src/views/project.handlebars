<form id="project-form">
  <h1>add my project</h1>
  <div class="form-wrapper">
    <div class="input-form">
      <label for="project-name">project name</label>
      <input type="text" id="project-name" required />
    </div>
    <div class="input-date-wrapper">
      <div class="input-form">
        <label for="start-date">Start Date</label>
        <input type="date" id="start-date" name="start-date" required />
      </div>
      <div class="input-form">
        <label for="end-date">End Date</label>
        <input type="date" id="end-date" name="end-date" required />
      </div>
    </div>
    <div class="input-form">
      <label for="description">description</label><textarea
        name="description"
        id="description"
        rows="10"
        cols="20"
        required
      ></textarea>
    </div>
    <div class="input-form">
      <h4>Tecnologies</h4>
      <div class="checkbox-container">
        <div class="checkbox-wrapper">
          <div class="input-checkbox">
            <input type="checkbox" id="node-js" name="tech" value="node-js" />
            <span></span>
            <label for="node-js">node js</label>
          </div>
          <div class="input-checkbox">
            <input type="checkbox" id="react-js" name="tech" value="react-js" />
            <span></span>
            <label for="react-js">react js</label>
          </div>
        </div>
        <div class="checkbox-wrapper">
          <div class="input-checkbox">
            <input type="checkbox" id="next-js" name="tech" value="next-js" />
            <span></span>
            <label for="next-js">next js</label>
          </div>
          <div class="input-checkbox">
            <input
              type="checkbox"
              id="typescript"
              name="tech"
              value="typescript"
            />
            <span></span>
            <label for="typescript">typescript</label>
          </div>
        </div>
      </div>
    </div>
    <div class="input-form">
      <label for="image-upload">Upload Image</label>
      <div class="upload-wrapper">
        <input
          type="file"
          id="imageUpload"
          name="image-upload"
          accept="image/*"
          required
        />
        <span class="custom-text">choose</span>
        <i class="fa fa-paperclip"></i>
      </div>
    </div>
  </div>
  <button type="submit">submit</button>
</form>

<section id="project-list" class="project-container">
  <h1>my project</h1>
  <div class="project-wrapper"></div>
</section>